<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <com.heyi.widget.MyScrollVIew
        android:id="@+id/tb_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/tb_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@mipmap/bg" />

            <LinearLayout
                android:id="@+id/tb_bb"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="#b00"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/tb_pj"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#cccccc">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="评价"
                    android:textColor="#666"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#b00" />

            <LinearLayout
                android:id="@+id/tb_xq"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#cccccc">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="详情"
                    android:textColor="#666"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#b00" />

            <LinearLayout
                android:id="@+id/tb_tj"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#cccccc">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="推荐"
                    android:textColor="#666"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="800dp"
                android:background="#b00" />

        </LinearLayout>

    </com.heyi.widget.MyScrollVIew>

    <RelativeLayout
        android:id="@+id/tb_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/tb_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tb_bg"
            android:gravity="center">

            <ImageView
                android:id="@+id/tb_back_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/back" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/tb_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/tb_bg"
            android:gravity="center">

            <ImageView
                android:id="@+id/tb_more_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/more" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tb_gwc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/tb_more"
            android:background="@drawable/tb_bg"
            android:gravity="center">

            <ImageView
                android:id="@+id/tb_gwc_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/gwc" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/tb_back"
            android:orientation="horizontal"
            android:padding="8dp">

            <com.heyi.widget.MyTextView
                android:id="@+id/tb_bb_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="宝贝"
                android:textColor="#00FF7F00"
                android:textSize="20sp" />

            <com.heyi.widget.MyTextView
                android:id="@+id/tb_pj_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="评价"
                android:textColor="#00222222"
                android:textSize="20sp" />

            <com.heyi.widget.MyTextView
                android:id="@+id/tb_xq_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="详情"
                android:textColor="#00222222"
                android:textSize="20sp" />

            <com.heyi.widget.MyTextView
                android:id="@+id/tb_tj_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="推荐"
                android:textColor="#00222222"
                android:textSize="20sp" />


        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
